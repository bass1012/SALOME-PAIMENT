# Variables d'environnement pour Salon Paiement
# Copier ce fichier en .env et modifier les valeurs

# =============================================================================
# CONFIGURATION DJANGO
# =============================================================================

# Clé secrète Django (générer une nouvelle clé pour la production)
SECRET_KEY=django-insecure-changez-cette-cle-en-production

# Mode debug (False en production)
DEBUG=False

# Hosts autorisés (séparer par des virgules)
ALLOWED_HOSTS=localhost,127.0.0.1,votre-domaine.com,www.votre-domaine.com

# =============================================================================
# CONFIGURATION BASE DE DONNÉES
# =============================================================================

# Nom de la base de données
DB_NAME=salon_paiement_db

# Utilisateur de la base de données
DB_USER=salon_user

# Mot de passe de la base de données
DB_PASSWORD=votre_mot_de_passe_securise

# Hôte de la base de données
DB_HOST=localhost

# Port de la base de données
DB_PORT=3306

# =============================================================================
# CONFIGURATION EMAIL (optionnel)
# =============================================================================

# Email backend
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Serveur SMTP
EMAIL_HOST=smtp.votreserveur.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=votre_email@domaine.com
EMAIL_HOST_PASSWORD=votre_mot_de_passe_email

# Email par défaut
DEFAULT_FROM_EMAIL=votre_email@domaine.com

# =============================================================================
# CONFIGURATION REDIS (optionnel)
# =============================================================================

# URL Redis pour le caching
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CONFIGURATION SÉCURITÉ
# =============================================================================

# Activer HTTPS (True en production)
SECURE_SSL_REDIRECT=True

# Cookies sécurisés (True en production)
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# =============================================================================
# CONFIGURATION FRONTEND
# =============================================================================

# URL de l'API pour le frontend
REACT_APP_API_URL=http://localhost:8000/api

# =============================================================================
# CONFIGURATION DOCKER
# =============================================================================

# Mot de passe root MySQL (pour Docker)
DB_ROOT_PASSWORD=votre_mot_de_passe_root_tres_securise

# =============================================================================
# CONFIGURATION SERVICES EXTERNES
# =============================================================================

# Configuration CinetPay (si utilisé)
CINETPAY_API_KEY=votre_cinetpay_api_key
CINETPAY_SITE_ID=votre_cinetpay_site_id

# Configuration SMS (si utilisé)
SMS_API_KEY=votre_sms_api_key
SMS_API_URL=https://api.sms-service.com

# =============================================================================
# CONFIGURATION MONITORING
# =============================================================================

# Niveau de logging
LOG_LEVEL=INFO

# Sentry DSN (pour le monitoring d'erreurs)
SENTRY_DSN=votre_sentry_dsn

# =============================================================================
# CONFIGURATION DÉVELOPPEMENT
# =============================================================================

# Pour le développement local, décommentez ces lignes:
# DEBUG=True
# ALLOWED_HOSTS=localhost,127.0.0.1
# REACT_APP_API_URL=http://localhost:8000/api
